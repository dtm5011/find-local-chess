---
import { sanityClient } from 'sanity:client';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { formatTimeRange } from '../../lib/utils';

const { slug } = Astro.params;

// Get the event by slug
const query = `*[_type == "event" && slug.current == $slug && !(_id in path("drafts.**"))][0]`;
const event = await sanityClient.fetch(query, { slug });

if (!event) {
  return Astro.redirect('/404');
}
---

<BaseLayout title={event.title}>
  <div class="container">
    <article>
      <header>
        <h1>{event.title}</h1>
        <p><strong>When:</strong> {event.dayOfWeek} at {formatTimeRange(event.startTime, event.endTime)}</p>
        <p><strong>Where:</strong> {event.venue}</p>
        <p><strong>Organizer:</strong> {event.organizer}</p>
        <div class="tags">
          {event.tags?.map((tag: string) => <wa-tag>{tag}</wa-tag>)}
        </div>
      </header>
      <div class="content">
        <p>{event.description}</p>
      </div>
    </article>
  </div>
</BaseLayout>
