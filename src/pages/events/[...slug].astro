---
import { sanityClient } from 'sanity:client';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { formatTimeRange } from '../../lib/utils';

export async function getStaticPaths() {
  const query = `*[_type == "event" && status == "approved"]`;
  const events: any[] = await sanityClient.fetch(query);

  return events.map((event: any) => ({
    params: { slug: event.slug.current },
    props: { event },
  }));
}

const { event } = Astro.props;
---

<BaseLayout title={event.title}>
  <div class="container">
    <article>
      <header>
        <h1>{event.title}</h1>
        <p><strong>When:</strong> {event.dayOfWeek} at {formatTimeRange(event.startTime, event.endTime)}</p>
        <p><strong>Where:</strong> {event.venue}</p>
        <p><strong>Organizer:</strong> {event.organizer}</p>
        <div class="tags">
          {event.tags?.map((tag: string) => <wa-tag>{tag}</wa-tag>)}
        </div>
      </header>
      <div class="content">
        <p>{event.description}</p>
      </div>
    </article>
  </div>
</BaseLayout>
