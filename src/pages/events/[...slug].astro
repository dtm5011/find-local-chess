---
import { sanityClient } from 'sanity:client';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { formatTimeRange } from '../../lib/utils';

const { slug } = Astro.params;

// Get the event by slug
const query = `*[_type == "event" && slug.current == $slug && !(_id in path("drafts.**"))][0]`;
const event = await sanityClient.fetch(query, { slug });

if (!event) {
  return Astro.redirect('/404');
}
---

<BaseLayout title={event.title}>
  <div class="container">
    <article>
      <header>
        <h1>{event.title}</h1>
        <dl class="event-meta">
          <dt>When:</dt>
          <dd>
            {event.dayOfWeek} at {formatTimeRange(event.startTime, event.endTime)}
            {event.recurrence && <span class="recurrence"> â€¢ {event.recurrence}</span>}
          </dd>
          <dt>Where:</dt>
          <dd>{event.venue}, {event.location}</dd>
          {event.organizer && (
            <dt>Organizer:</dt>
            <dd>{event.organizer}</dd>
          )}
          {event.contact && (
            <dt>Contact:</dt>
            <dd>{event.contact}</dd>
          )}
          {event.link && (
            <dt>Website:</dt>
            <dd><a href={event.link} target="_blank" rel="noopener noreferrer">{event.link}</a></dd>
          )}
        </dl>
        <div class="tags">
          {event.tags?.map((tag: string) => <wa-tag>{tag}</wa-tag>)}
        </div>
      </header>
      <div class="content">
        <p>{event.description}</p>
      </div>
    </article>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  header {
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--wa-color-surface-border);
    padding-bottom: 1rem;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .event-meta {
    margin: 1.5rem 0;
  }

  .event-meta dt {
    font-weight: bold;
    margin-top: 1rem;
  }

  .event-meta dt:first-child {
    margin-top: 0;
  }

  .event-meta dd {
    margin-bottom: 0.5rem;
  }

  .recurrence {
    font-style: italic;
    opacity: 0.8;
  }

  .tags {
    margin-top: 1.5rem;
  }

  .tags wa-tag {
    margin-right: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .content {
    line-height: 1.7;
    font-size: 1.1rem;
  }

  a {
    color: var(--wa-color-brand-fill-loud);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }
</style>
