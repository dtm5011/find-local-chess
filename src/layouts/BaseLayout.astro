---
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Find local chess events, tournaments, and meetups in your area" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="wa-theme-awesome">
  <head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="stylesheet" href="/webawesome/styles/webawesome.css" />
    <link rel="stylesheet" href="/webawesome/styles/themes/awesome.css" />
    <script type="module" src="/assets/webawesome.js" is:inline></script>
    
    <script is:inline>
      // Use system preference for theme
      if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.classList.add('wa-dark');
      } else {
        document.documentElement.classList.add('wa-light');
      }

      // Listen for system theme changes
      window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
        if (e.matches) {
          document.documentElement.classList.remove('wa-light');
          document.documentElement.classList.add('wa-dark');
        } else {
          document.documentElement.classList.remove('wa-dark');
          document.documentElement.classList.add('wa-light');
        }
      });
    </script>
  </head>
  <body>
    <a href="#main-content" class="wa-visually-hidden skip-link">Skip to main content</a>
    <header class="main-header">
      <div class="header-content">
        <h1><a href="/"><img src="/chess.svg" alt="Chess" class="chess-icon" /> Find Local Chess</a></h1>
        <nav aria-label="Primary">
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/locations">Locations</a></li>
            <li><a href="/contribute">Contribute</a></li>
          </ul>
        </nav>
      </div>

    </header>

    <main id="main-content">
      <slot />
    </main>

    <footer>
      <p>
        Want to add an event?
        <a
          href="https://github.com/dtm5011/find-local-chess"
          target="_blank"
          rel="noopener noreferrer"
        >
          Submit a pull request on GitHub
        </a>
      </p>
    </footer>
  </body>
</html>

<style>
  .main-header {
    padding: 1rem;
    border-bottom: 1px solid var(--wa-color-surface-border);
  }

  .header-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .header-content h1 {
    margin: 0;
    font-size: 1.5rem;
  }

  .header-content h1 a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
  }

  .chess-icon {
    width: 1.5em;
    height: 1.5em;
  }

  .wa-dark .chess-icon {
    filter: invert(1);
  }

  nav ul {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  nav a {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: var(--wa-border-radius-m);
    transition: background-color 0.2s ease-in-out;
    font-size: 0.9rem;
  }

  nav a:hover {
    background-color: var(--wa-color-surface-lowered);
    text-decoration: none;
  }



  footer {
    text-align: center;
    padding: 1rem;
    border-top: 1px solid var(--wa-color-surface-border);
    margin-top: 2rem;
    font-size: 0.9rem;
  }

  /* Tablet and up */
  @media (min-width: 768px) {
    .main-header {
      padding: 1rem 2rem;
    }

    .header-content {
      flex-direction: row;
      align-items: center;
      gap: 2rem;
    }

    .header-content h1 {
      font-size: 2rem;
    }

    nav ul {
      gap: var(--wa-space-m);
    }

    nav a {
      font-size: 1rem;
    }

    footer {
      padding: 2rem;
      font-size: 1rem;
    }
  }
</style>

