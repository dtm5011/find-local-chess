---
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Find local chess events, tournaments, and meetups in your area" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="wa-theme-awesome wa-dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="stylesheet" href="/webawesome/styles/webawesome.css" />
    <link rel="stylesheet" href="/webawesome/styles/themes/awesome.css" />
    <script type="module">
      import '/src/scripts/webawesome.ts';
    </script>
    <script is:inline src="/scripts/theme-switcher.js"></script>
  </head>
  <body>
    <a href="#main-content" class="wa-visually-hidden skip-link">Skip to main content</a>
    <header>
      <div class="header-content">
        <h1><a href="/">♟️ Find Local Chess</a></h1>
        <nav aria-label="Primary">
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/contribute">Contribute</a></li>
          </ul>
        </nav>
      </div>
      <div class="theme-switcher">
        <wa-select id="theme-toggle" value="dark" label="Theme">
          <wa-option value="light">Light</wa-option>
          <wa-option value="dark">Dark</wa-option>
        </wa-select>
      </div>
    </header>

    <main id="main-content">
      <slot />
    </main>

    <footer>
      <p>
        Want to add an event?
        <a
          href="https://github.com/your-username/chess-website"
          target="_blank"
          rel="noopener noreferrer"
        >
          Submit a pull request on GitHub
        </a>
      </p>
    </footer>
  </body>
</html>

<style is:global>
  /* Layout */
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  body {
    background-color: var(--wa-color-surface-default);
    color: var(--wa-color-text-normal);
    padding: 1rem;
  }

  html.wa-light body {
    background-color: var(--wa-color-surface-default);
    color: var(--wa-color-text-normal);
  }

  /* Skip link: use Web Awesome's wa-visually-hidden to hide until focus */
  .skip-link {
    background: var(--wa-color-surface-default);
    color: var(--wa-color-text-normal);
    padding: 0.5rem 0.75rem;
    border-radius: 0.25rem;
    box-shadow: 0 1px 2px rgba(0,0,0,.2);
  }
  .skip-link:focus,
  .skip-link:focus-visible {
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    outline: 2px solid var(--wa-color-brand-fill-loud);
    outline-offset: 2px;
  }

  /* Focus visibility for all interactive elements */
  a:focus-visible,
  button:focus-visible,
  [role="button"]:focus-visible,
  input:focus-visible,
  select:focus-visible,
  textarea:focus-visible,
  summary:focus-visible,
  wa-button:focus-visible,
  wa-select:focus-visible,
  wa-input:focus-visible {
    outline: 2px solid var(--wa-color-brand-fill-loud);
    outline-offset: 2px;
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none !important;
      transition: none !important;
      scroll-behavior: auto !important;
    }
    .skip-link {
      transition: none;
    }
  }
</style>
